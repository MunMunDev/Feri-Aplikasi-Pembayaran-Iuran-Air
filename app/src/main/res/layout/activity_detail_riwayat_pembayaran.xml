<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.user.riwayat_pembayaran.DetailRiwayatPembayaranActivity">

    <View
        android:id="@+id/bgHeader"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/titleHeader"
        android:background="@color/biru_main"/>

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/icon_arrow_back"
        android:elevation="10dp"/>

    <TextView
        android:id="@+id/titleHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:text="Detail Pembayaran"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bgHeader"
        android:layout_marginTop="14dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_card">

        <TextView
            android:id="@+id/tvTitleTanggalPembayaran"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvTitikTanggalPembayaran"
            app:layout_constraintTop_toTopOf="@id/tvTitikTanggalPembayaran"
            app:layout_constraintBottom_toBottomOf="@id/tvTitikTanggalPembayaran"
            android:layout_marginEnd="10dp"
            android:text="Tgl. Pembayaran"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvTitikTanggalPembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="70dp"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvTanggalPembayaran"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tvTitikTanggalPembayaran"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="14dp"
            android:text="23 Januari 2023"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tvTitleTenggatBulan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvTitikTenggatBulan"
            app:layout_constraintTop_toTopOf="@id/tvTitikTenggatBulan"
            app:layout_constraintBottom_toBottomOf="@id/tvTitikTenggatBulan"
            android:layout_marginEnd="10dp"
            android:text="Tenggat Bulan"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvTitikTenggatBulan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTanggalPembayaran"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvTenggatBulan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tvTitikTenggatBulan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTitikTenggatBulan"
            app:layout_constraintBottom_toBottomOf="@id/tvTitikTenggatBulan"
            android:layout_marginStart="14dp"
            android:text="Januari 2023"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tvTitleHarga"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvTitikHarga"
            app:layout_constraintTop_toTopOf="@id/tvTitikHarga"
            app:layout_constraintBottom_toBottomOf="@id/tvTitikHarga"
            android:layout_marginEnd="10dp"
            android:text="Biaya"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvTitikHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvTenggatBulan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvHarga"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tvTitikHarga"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTitikHarga"
            app:layout_constraintBottom_toBottomOf="@id/tvTitikHarga"
            android:layout_marginStart="14dp"
            android:text="Rp. 20.000"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tvTitleDenda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvTitikDenda"
            app:layout_constraintTop_toTopOf="@id/tvTitikDenda"
            app:layout_constraintBottom_toBottomOf="@id/tvTitikDenda"
            android:layout_marginEnd="10dp"
            android:text="Denda"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvTitikDenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvHarga"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="70dp"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvDenda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tvTitikDenda"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTitikDenda"
            app:layout_constraintBottom_toBottomOf="@id/tvTitikDenda"
            android:layout_marginStart="14dp"
            android:text="Rp. 8.000"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tvTitleBiayaAdmin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvTitikBiayaAdmin"
            app:layout_constraintTop_toTopOf="@id/tvTitikBiayaAdmin"
            app:layout_constraintBottom_toBottomOf="@id/tvTitikBiayaAdmin"
            android:layout_marginEnd="10dp"
            android:text="Biaya Admin"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvTitikBiayaAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvDenda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="70dp"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvBiayaAdmin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tvTitikBiayaAdmin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTitikBiayaAdmin"
            app:layout_constraintBottom_toBottomOf="@id/tvTitikBiayaAdmin"
            android:layout_marginStart="14dp"
            android:text="Rp. 2.000"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal"/>

        <View
            android:id="@+id/vPembatasTotal"
            android:layout_width="match_parent"
            android:layout_height="1.4dp"
            app:layout_constraintTop_toBottomOf="@id/tvBiayaAdmin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:background="@color/abuabu_muda"/>

        <TextView
            android:id="@+id/tvTitleTotalTagihan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvTitikTotalTagihan"
            app:layout_constraintTop_toBottomOf="@id/vPembatasTotal"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:gravity="left"
            android:text="Total Tagihan"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTitikTotalTagihan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vPembatasTotal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="70dp"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvTotalTagihan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vPembatasTotal"
            app:layout_constraintStart_toEndOf="@id/tvTitikTotalTagihan"
            android:layout_marginTop="8dp"
            android:layout_marginStart="14dp"
            android:text="Rp. 50.000.000"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="start"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


  </androidx.constraintlayout.widget.ConstraintLayout>