<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_card"
    android:layout_marginTop="10dp"
    android:id="@+id/clRiwayatPembayaran">

    <TextView
        android:id="@+id/lsTvBulanTenggatWaktu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Desember 2023 "
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lsTvHargaRiwayatPesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lsTvBulanTenggatWaktu"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        android:text="Harga Total : Rp.500.000"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/lsTvTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lsTvHargaRiwayatPesanan"
        app:layout_constraintEnd_toStartOf="@+id/lsTvWaktu"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:text="23 November 2023"
        android:textColor="@color/black"
        android:textSize="14sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lsTvHargaRiwayatPesanan"
        app:layout_constraintEnd_toStartOf="@+id/lsTvWaktu"
        android:layout_marginTop="8dp"
        android:layout_marginRight="3dp"
        android:text="-"
        android:textColor="@color/abuabu_tua"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/lsTvWaktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lsTvHargaRiwayatPesanan"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:text="17:00"
        android:textColor="@color/black"
        android:textSize="14sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>